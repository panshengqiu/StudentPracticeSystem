<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.edu.bjut.hrregister.mapper.HrRegisterMapper">
    <insert id="register">
        insert into human_resource(firm_id,department,username, password,head_url,phone,email)
                        values(#{enterprise.id},#{department},#{username},#{password},#{headUrl},#{phone},#{email});
    </insert>
    <select id="firmIsRegister" resultType="String">
        select status from enterprise
                 where name=#{name} and credit_code=#{creditCode};
    </select>
    <select id="isFirmApproval" resultType="String">
        select status from register_approval
                 where enterprise_id=(select id from enterprise where name=#{name} and credit_code=#{creditCode});
    </select>
    <select id="selectEnterpriseId" resultType="java.lang.Integer">
        select id from enterprise where name=#{name} and credit_code=#{creditCode};
    </select>
    <select id="selectHrUsername" resultType="cn.edu.bjut.entity.hr.HumanResource">
        select * from human_resource where username=#{username};
    </select>
</mapper>